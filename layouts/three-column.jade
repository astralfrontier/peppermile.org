extends ./master.jade

block contents
  div.container
    div.row.hidden-print
      div.col-sm-12
        div.page-header
          h1= title || "Peppermile"
    div.row
      div.col-sm-3.peppermile-left-column.hidden-print
        block left
          include ./menu.jade
      div.col-sm-6.peppermile-main-column
        block main
      div.col-sm-3.peppermile-right-column.hidden-print
        block right
          include ./images.jade
    div.row
      div.col-sm-12.text-center
        footer
          hr
          | &copy; 2016 #{copyright || "Bill Garrett"}
          | &nbsp;--&nbsp;
          a(href="mailto:" + (copyrightEmail || "garrett@peppermile.com"))= copyrightEmail || "garrett@peppermile.com"
